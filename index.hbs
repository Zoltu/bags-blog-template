{{!< default}}
 <section class="left-section">
    {{#foreach posts}}
	<!--blog-->
    <div class="blog-outer">
        <div class="blog-image">
            {{#if image}}
            <a href="{{url}}"><img src="{{image}}" alt="{{name}}" class="index-article-image" /></a>
            {{/if}}
        </div>
		{{#if image}}
		<div class="blog-content">
		{{else}}
        <div class="blog-content full-width">
		{{/if}}
            <div class="blog-heading"><a href="{{url}}">{{title}}</a></div>
            <div class="date">
                <img src="{{asset 'images/calender.png'}}"> {{date}}
            </div>
            <div class="article-content home">
                <p> {{excerpt words="100"}}</p>
            </div>
			
										            <section class="share">Share
                <a class="icon-twitter" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <span class="share-img"><img src="{{asset 'images/twitter-share-icon.png'}}" /></span>
                </a>
                <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <span class="share-img"><img src="{{asset 'images/fb-share-icon.png'}}" /></span>
                </a>
                <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <span class="share-img"><img src="{{asset 'images/gplus-share-icon.png'}}" /></span>
                </a>
            </section>
			
            <div class="read-more">
                <a href="{{url}}">Read more <img src="{{asset 'images/right-arrow.png'}}" /></a>
            </div>
			

			
        </div>
		
		
		
    </div>

	<!--//blog-->
    {{/foreach}}

	
    {{pagination}}
	

</section>
{{> "aside"}}

